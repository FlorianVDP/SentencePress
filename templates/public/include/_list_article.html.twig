{% for article in articles %}

{%  dump articles  %}
    <article class="bg-slate-100 p-[2rem] border-b border-gray-border rounded-lg  shadow-lg mb-4">
            <div class="flex justify-between items-center">
                <span class="flex items-center text-gray-dark text-app-s lg:text-app-l">
                 <img src="data:image/png;base64," class="inline"/>
                    <span> {{ article.author }}</span>
            </span>
            </div>
        <div class="flex items-center justify-between py-2">
            <h3 class="mr-12">
                <a href="{{ path('app_article', { slug: article.slug } )}}"
                   class="font-bold text-xl"
                   title="Lire  article"> {{ article.name }} </a>
            </h3>
            <div>
                <span class="text-xs mr-2"> {{ article.category}} </span> > <span  class="text-xs"> {{ article.subCategory }}</span>
            </div>
        </div>
        <p> {{ article.content|u.truncate(30 , '...')|raw }}</p>
    </article>
{% endfor %}