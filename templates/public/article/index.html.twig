{% extends 'base.html.twig' %}

{% block title %} Article {% endblock %}

{% block body %}

    <div class="container mx-[4%] max-w-none md:mx-[10%] lg:mx-[16%] w-auto mt-[0rem] lg:mt-12 font-Asap text-gray-dark text-app-l leading-normal ">


        <div class="presentation mb-16">
            <h1 class="text-4xl  uppercase font-bold  pb-[2.5rem]"> {{article.name}}</h1>
              <div class="flex border-t border-solid  border-[#0085ba] pt-4 pb-12 lg:flex justify-between  text-xs" >
                  <div class="flex justify-between w-[30%] ">
                      <span>
                          <img src="data:image/png;base64," class="inline"/>par : {{article.author}} </span>
                  </div>
                  <div class="flex justify-between w-[30%] ">
                      <span class="inline ">
                          <img src="data:image/png;base64," class="inline"/>
                          {{article.category}} </span>
                      <span class="inline ">
                       <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAABmJLR0QA/wD/AP+gvaeTAAAAcklEQVQ4jc2SMQqAMAxFn+IJeh4H8WqKd3V3qUs6aEFKWtIK4ocsoXn5DR/+pg3wgCR1AJMF4AGn9AXYLRAp9McbMrcCnt+pBmTf9IaBogbrJqCrBagDrQ6ysNcO0iOe6EGKclxhy2pFj3IsDywWZ98pAMhZIVY7k+dVAAAAAElFTkSuQmCC" class="inline"/>
                          {{article.subCategory}}</span>
                  </div>
              </div>
            <div class=" content leading-[2rem]">
              {{  article.content|raw }}
            </div>
        </div>


        <div class="mt-16">
            <h2 class="text-2xl  uppercase font-bold  pb-[2.5rem]"> Les commentaires </h2>
           {%  if article.comment %}
            <div class="article mb-12">
                {% for com in article.comment %}
                    <div>
                        <span>
                             <span> {{  com.author.pseudo }}</span>
                             <span>{{  com.date  | date('j. F Y') }} </span>
                         </span>
                        <p> {{  com.content|raw }}</p>
                    </div>
                {% endfor %}
            </div>
            {%  endif %}
        </div>


        <div class="mt-16">
            <h2 class="text-2xl  uppercase font-bold  pb-[2.5rem]"> Les Articles en relation avec {{article.category}} </h2>
            <div class="article mb-12">
                {{ include('public/include/_list_article.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}

