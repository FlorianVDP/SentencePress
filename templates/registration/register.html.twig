{% extends 'base.html.twig' %}

{% block title %}SentencePress | S'inscrire{% endblock %}

{% block body %}
    <section class="register max-w-xl m-auto">
        <div>
            <h1 class="text-4xl uppercase font-bold mt-20 mb-[2rem]">S'inscrire</h1>
            <h2 class=" text-sm uppercase font-bold"> Vous souhaitez rejoindre SentencePress et pourvoir participer à la vie du blog ? Inscrivez-vous dès maintenant </h2>

            <div class="m-[3rem]">
                {{ form_start(registrationForm) }}
                <div class="text-xs text-red-500">
                    {{ form_errors(registrationForm.pseudo) }}
                </div>
                <div class="my-[1rem]">
                    <p class="block mb-2 text-sm font-bold text-gray-700">{{ form_label(registrationForm.pseudo) }} </p>
                    {{ form_widget(registrationForm.pseudo,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}
                </div>
                <div class="text-xs text-red-500">
                    {{ form_errors(registrationForm.name) }}
                </div>
                <div class="my-[1rem]">
                    <p class="block mb-2 text-sm font-bold text-gray-700">{{ form_label(registrationForm.name) }} </p>
                    {{ form_widget(registrationForm.name,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}
                </div>
                <div class="text-xs text-red-500">
                    {{ form_errors(registrationForm.email) }}
                </div>
                <div class="my-[1rem]">
                    <p class="block mb-2 text-sm font-bold text-gray-700">{{ form_label(registrationForm.email) }} </p>
                    {{ form_widget(registrationForm.email,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}
                </div>
                <div class="text-xs text-red-500">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </div>
                <div class="my-[1rem]">
                    <p class="block mb-2 text-sm font-bold text-gray-700">{{ form_label(registrationForm.plainPassword.first) }}</p>
                    {{ form_widget(registrationForm.plainPassword.first,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}

                </div>
                <div class="my-[1rem]">
                    <p class="block mb-2 text-sm font-bold text-gray-700">{{ form_label(registrationForm.plainPassword.second) }}</p>
                    {{ form_widget(registrationForm.plainPassword.second,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}
                </div>

                <p>
                    {{ form_widget(registrationForm.agreeTerms)}}
                    {{ form_label(registrationForm.agreeTerms)}}
                </p>

                {{ form_widget(registrationForm.submit,  { 'attr': {'class': 'btn my-[1rem] mt-[3rem] mx-auto block hover:opacity-80'} })}}
                {{ form_end(registrationForm) }}
            </div>

        </div>
    </section>
{% endblock %}
















